---
import '@styles/main.scss';

interface Props {
  title: string;
  description?: string;
  layout?: string;
}

const { title, description, layout = 'default' } = Astro.props;

const siteTitle = 'Piranha Stories';
const tagline = 'Short stories to brighten your day.';

const pageTitle = title === 'Home' 
  ? `${siteTitle} · ${tagline}` 
  : `${title} · ${siteTitle}`;

const metaDescription = description || `${tagline} ${siteTitle} - A collection of original short stories by Brian_AP.`;

const isHome = Astro.url.pathname === '/';
---

<!DOCTYPE html>
<html lang="en-us">
  <head>
    <link href="http://gmpg.org/xfn/11" rel="profile" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <meta name="description" content={metaDescription} />
    
    <title>{pageTitle}</title>
    
    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    
    <!-- RSS -->
    <link rel="alternate" type="application/rss+xml" title="RSS" href="/feed.xml" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" />
    
    <slot name="head" />
  </head>
  
  <body class:list={[layout, { home: isHome }]}>
    <div id="sidebar">
      <slot name="sidebar">
        <header>
          <img 
            class="logo" 
            src="/assets/img/logo-min.png" 
            alt="Piranha Stories logo" 
            width="150" 
            height="150" 
          />
          
          {layout === 'index' ? (
            <h1 class="site-title">
              <a href="/">
                {!isHome && <span class="back-arrow icon">←</span>}
                {siteTitle}
              </a>
            </h1>
          ) : (
            <div class="site-title">
              <a href="/">
                {!isHome && <span class="back-arrow icon">←</span>}
                {siteTitle}
              </a>
            </div>
          )}
          
          <p class="lead">A collection of stories by <a href="//www.reddit.com/user/Brian_AP">Brian_AP</a></p>
        </header>
        
        <nav id="sidebar-nav-links">
          <a class="home-link" href="/">Home</a>
          <a class="page-link" href="/about/">About</a>
        </nav>
        
        <nav id="sidebar-icon-links">
          <a id="subscribe-link" class="icon" href="/feed.xml" title="RSS Feed">
            <svg fill="#000000" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M0 0h24v24H0z" fill="none"/>
              <circle cx="6.18" cy="17.82" r="2.18"/>
              <path d="M4 4.44v2.83c7.03 0 12.73 5.7 12.73 12.73h2.83c0-8.59-6.97-15.56-15.56-15.56zm0 5.66v2.83c3.9 0 7.07 3.17 7.07 7.07h2.83c0-5.47-4.43-9.9-9.9-9.9z"/>
            </svg>
          </a>
          <a id="tags-link" class="icon" href="/tags/" title="Tags">
            <svg fill="#000000" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M0 0h24v24H0z" fill="none"/>
              <path d="M17.63 5.84C17.27 5.33 16.67 5 16 5L5 5.01C3.9 5.01 3 5.9 3 7v10c0 1.1.9 1.99 2 1.99L16 19c.67 0 1.27-.33 1.63-.84L22 12l-4.37-6.16z"/>
            </svg>
          </a>
          <a id="search-link" class="icon" href="/search/" title="Search">
            <svg fill="#000000" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
              <path d="M0 0h24v24H0z" fill="none"/>
            </svg>
          </a>
        </nav>
        
        <p id="copyright">
          &copy; 2024 Brian_AP.<br />
          Powered by <a href="https://astro.build">Astro</a>.
        </p>
      </slot>
    </div>
    
    <main class="container">
      <slot />
    </main>
    
    <slot name="footer" />
  </body>
</html>
